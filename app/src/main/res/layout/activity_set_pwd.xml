<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/back_f"
    android:layout_height="match_parent"
    tools:context="cn.see.fragment.fragmentview.mineview.SetPwdAct">

    <include layout="@layout/layout_base_title"></include>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="20px"
        android:layout_below="@+id/p_rela"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_width="match_parent"
        android:layout_height="90px">


        <ImageView
            android:id="@+id/c_img"
            android:layout_centerVertical="true"
            android:src="@drawable/pwd_icon"
            android:layout_width="45px"
            android:layout_height="45px" />


        <EditText
            android:id="@+id/et_pwdc_current"
            android:background="@null"
            android:layout_marginLeft="15px"
            android:textSize="@dimen/sp_30"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/c_img"
            android:textColorHint="@color/text_101010"
            android:textColor="@color/text_101010"
            android:layout_width="match_parent"
            android:hint="请输入当前密码"
            android:layout_height="60px" />

        <View
            android:layout_alignLeft="@+id/et_pwd"
            android:layout_alignParentBottom="true"
            android:background="@color/view_f1"
            android:layout_width="match_parent"
            android:layout_height="2px"></View>

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/w_rela"
        android:layout_marginTop="20px"
        android:layout_below="@+id/p_rela"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_width="match_parent"
        android:layout_height="90px">


        <ImageView
            android:id="@+id/n_img"
            android:layout_centerVertical="true"
            android:src="@drawable/pwd_icon"
            android:layout_width="45px"
            android:layout_height="45px" />


        <EditText
            android:id="@+id/et_pwd_new"
            android:background="@null"
            android:layout_marginLeft="15px"
            android:textSize="@dimen/sp_30"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/n_img"
            android:textColorHint="@color/text_101010"
            android:textColor="@color/text_101010"
            android:layout_width="match_parent"
            android:hint="请输入新密码"
            android:layout_height="60px" />

        <View
            android:layout_alignLeft="@+id/et_pwd"
            android:layout_alignParentBottom="true"
            android:background="@color/view_f1"
            android:layout_width="match_parent"
            android:layout_height="2px"></View>

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="20px"
        android:layout_below="@+id/p_rela"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_width="match_parent"
        android:layout_height="90px">


        <ImageView
            android:id="@+id/q_img"
            android:layout_centerVertical="true"
            android:src="@drawable/pwd_icon"
            android:layout_width="45px"
            android:layout_height="45px" />

        <EditText
            android:id="@+id/et_pwd_q"
            android:background="@null"
            android:layout_marginLeft="15px"
            android:textSize="@dimen/sp_30"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/q_img"
            android:textColorHint="@color/text_101010"
            android:textColor="@color/text_101010"
            android:layout_width="match_parent"
            android:hint="请确认新密码"
            android:layout_height="60px" />

        <View
            android:layout_alignLeft="@+id/et_pwd"
            android:layout_alignParentBottom="true"
            android:background="@color/view_f1"
            android:layout_width="match_parent"
            android:layout_height="2px"></View>

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>

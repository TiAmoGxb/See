<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/back_f"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/one_tv"
            android:textColor="@color/text_101010"
            android:textSize="@dimen/sp_30"
            android:layout_marginTop="40px"
            android:layout_centerHorizontal="true"
            android:text="开启消息，尽在掌握"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/two_tv"
            android:layout_below="@+id/one_tv"
            android:textColor="@color/text_7d"
            android:textSize="@dimen/sp_30"
            android:singleLine="true"
            android:layout_marginTop="25px"
            android:layout_centerHorizontal="true"
            android:text="开启通知,第一时间收到最新互动消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:singleLine="true"
            android:layout_alignLeft="@+id/two_tv"
            android:layout_alignRight="@+id/two_tv"
            android:id="@+id/tv"
            android:layout_below="@+id/two_tv"
            android:textColor="@color/text_7d"
            android:textSize="@dimen/sp_30"
            android:layout_centerHorizontal="true"
            android:text="息不要错过每一段与你接触的缘分"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="40px"
            android:layout_below="@+id/tv"
            android:id="@+id/start_not"
            android:layout_marginBottom="30px"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_28"
            android:textColor="@color/back_f"
            android:background="@drawable/shap_but_act_yes_bg"
            android:text="开启通知"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:paddingLeft="25px"
            android:paddingRight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/start_not"
            android:background="@color/view_f4"
            android:layout_width="match_parent"
            android:layout_height="20px"></View>
    </com.zhy.autolayout.AutoRelativeLayout>




</com.zhy.autolayout.AutoRelativeLayout>

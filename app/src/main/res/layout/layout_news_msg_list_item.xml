<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back_f"
    android:layout_height="wrap_content">

    <View
        android:visibility="gone"
        android:id="@+id/t_view"
        android:background="@color/view_f4"
        android:layout_width="match_parent"
        android:layout_height="15px"></View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_below="@+id/t_view"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <ImageView
            app:layout_auto_baseheight="width"
            android:id="@+id/img"
            android:layout_marginLeft="25px"
            android:layout_centerVertical="true"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/zanle"/>

        <TextView
            android:id="@+id/tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@+id/img"
            android:textSize="@dimen/sp_28"
            android:textColor="@color/text_101010"
            android:text="赞了"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/b_view"
            android:layout_marginLeft="25px"
            android:layout_alignParentBottom="true"
            android:background="@color/text_c9"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
    </com.zhy.autolayout.AutoRelativeLayout>




</com.zhy.autolayout.AutoRelativeLayout>
